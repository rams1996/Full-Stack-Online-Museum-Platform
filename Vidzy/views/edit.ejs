<%- include ('partials/header') %> 
<div class="container">
  <h1 class="text-white"> Edit movie </h1>
  <form action="/videos/<%= video._id %>?_method=PUT" method="POST">
    <div class="form-group">
      <input type="text" name="title" class="form-control" value="<%= video.title %>" placeholder="title">
    </div>
    <div class="form-group">
      <input type="text" name="genre" class="form-control" value="<%= video.genre %>" placeholder="genre">
    </div>
    <div class="form-group">
      <input type="text" name="image" class="form-control" value="<%= video.image %>" placeholder="image name">
    </div>
    <div class="form-group">
      <textarea name="desc" class="form-control" placeholder="description"> <%= video.description %></textarea>
    </div>
    <div class="form-group form-inline">
      <button type="submit" class="btn btn-primary">Save</button>
      <a href="/" class="ml-3">Cancel</a>
    </div>
  </form>
</div> <%- include ('partials/footer') %>